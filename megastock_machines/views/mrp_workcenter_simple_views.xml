<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista formulario simple extendida -->
    <record id="mrp_workcenter_form_simple" model="ir.ui.view">
        <field name="name">mrp.workcenter.form.simple</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">
            
            <!-- Agregar estado de máquina después del campo de código -->
            <field name="code" position="after">
                <field name="machine_status" widget="badge" 
                       decoration-success="machine_status == 'operational'"
                       decoration-warning="machine_status in ['setup', 'standby']"
                       decoration-danger="machine_status in ['breakdown', 'maintenance']"/>
            </field>
            
            <!-- Agregar pestaña MEGASTOCK básica -->
            <xpath expr="//notebook" position="inside">
                <page string="MEGASTOCK - Básico">
                    <group>
                        <group string="Parámetros Básicos">
                            <field name="power_consumption_kw"/>
                            <field name="max_width_mm"/>
                            <field name="theoretical_capacity"/>
                        </group>
                        
                        <group string="Métricas OEE Hoy">
                            <!-- <field name="downtime_count_today"/> -->
                            <!-- <field name="downtime_duration_today"/> -->
                            <field name="oee_availability" widget="percentage"/>
                        </group>
                    </group>
                    
                    <group string="Acciones">
                        <button name="action_start_maintenance"
                                string="Iniciar Mantenimiento"
                                type="object"
                                class="btn-warning"/>
                    </group>
                </page>

                <page string="Configuración Trimado">
                    <group>
                        <group string="Parámetros de Cuchillas">
                            <field name="num_cuchillas"/>
                            <field name="tiempo_setup_cuchilla_min"/>
                            <field name="eficiencia_trimado_pct"/>
                        </group>

                        <group string="Dimensiones de Procesamiento">
                            <field name="ancho_util_mm"/>
                            <field name="refilio_estandar_mm"/>
                            <field name="ancho_disponible_mm" readonly="1"/>
                            <field name="velocidad_maxima_mmin"/>
                        </group>
                    </group>

                    <group string="Anchos de Bobina Disponibles">
                        <field name="bobina_widths_available" widget="text"
                               placeholder='[1070,1100,1120,1150,1370,1400,1600,1700,1880]'/>
                        <div class="alert alert-info" role="alert">
                            <strong>Formato:</strong> Lista JSON de anchos disponibles en mm.
                            Ejemplo: [1070,1100,1120,1150,1370,1400,1600,1700,1880]
                        </div>
                    </group>

                    <group string="Acciones de Trimado">
                        <button name="action_view_trimming_parameters"
                                string="Ver Parámetros de Trimado"
                                type="object"
                                class="btn-primary"/>
                    </group>
                </page>
            </xpath>
            
        </field>
    </record>
    
</odoo>