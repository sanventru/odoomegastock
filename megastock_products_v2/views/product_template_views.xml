<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista de formulario simple -->
        <record id="product_template_form_view_megastock_v2" model="ir.ui.view">
            <field name="name">product.template.form.megastock.v2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="megastock_category"/>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="MEGASTOCK">
                        <group string="Identificación" col="2">
                            <field name="megastock_code"/>
                        </group>
                        
                        <group string="Dimensiones" col="4">
                            <field name="largo_cm"/>
                            <field name="ancho_cm"/>
                            <field name="alto_cm"/>
                            <field name="ceja_cm"/>
                        </group>
                        
                        <group string="Especificaciones de Cartón" col="4">
                            <field name="flauta"/>
                            <field name="test_value"/>
                            <field name="kl_value"/>
                            <field name="numero_troquel"/>
                            <field name="empaque"/>
                            <field name="material_type"/>
                        </group>
                        
                        <group string="Impresión y Material" col="3">
                            <field name="colors_printing"/>
                            <field name="gramaje"/>
                            <field name="tipo_caja"/>
                        </group>
                        
                        <group string="Descripción Técnica">
                            <field name="technical_description" nolabel="1" readonly="1"/>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>