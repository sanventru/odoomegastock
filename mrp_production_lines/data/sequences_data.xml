<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Secuencia para números de pallet -->
        <record id="seq_mrp_production_pallet" model="ir.sequence">
            <field name="name">Pallet de Producción</field>
            <field name="code">mrp.production.pallet</field>
            <field name="prefix">PLT</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="number_next_actual">1</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Secuencia para códigos de lote -->
        <record id="seq_mrp_production_batch" model="ir.sequence">
            <field name="name">Lote de Producción</field>
            <field name="code">mrp.production.batch</field>
            <field name="prefix">BT</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="number_next_actual">1</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Secuencia para paradas de producción -->
        <record id="seq_mrp_workorder_stoppage" model="ir.sequence">
            <field name="name">Parada de Producción</field>
            <field name="code">mrp.workorder.stoppage</field>
            <field name="prefix">STOP</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next_actual">1</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>