<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario extendida para Orden de Producción -->
    <record id="view_mrp_production_form_extended" model="ir.ui.view">
        <field name="name">mrp.production.form.extended</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            
            <!-- Agregar campos después del campo product_id -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="production_line" readonly="1"/>
            </xpath>
            
            <!-- Agregar pestaña nueva con campos personalizados -->
            <xpath expr="//notebook" position="inside">
                <page string="Trazabilidad &amp; Etiquetado" name="traceability">
                    <group>
                        <group string="Códigos de Identificación">
                            <field name="master_pallet_number"/>
                            <field name="custom_production_code"/>
                            <field name="batch_code"/>
                            <field name="internal_reference"/>
                        </group>
                        <group string="Estadísticas">
                            <field name="total_pallets"/>
                            <field name="workorder_with_pallets"/>
                        </group>
                    </group>
                    <group>
                        <group string="Dimensiones del Producto">
                            <field name="product_length"/>
                            <field name="product_width"/>
                            <field name="product_height"/>
                        </group>
                        <group string="Especificaciones">
                            <field name="quality_specifications" widget="text"/>
                        </group>
                    </group>
                </page>
            </xpath>
            
            <!-- Agregar botones en el header -->
            <xpath expr="//header" position="inside">
                <button name="action_generate_pallet_numbers" 
                        type="object" 
                        string="Generar N° Pallets"
                        class="btn-secondary"
                        states="confirmed,progress,to_close"/>
                <button name="action_view_workorder_labels" 
                        type="object" 
                        string="Ver Etiquetas"
                        class="btn-secondary"
                        states="confirmed,progress,to_close,done"/>
            </xpath>
            
        </field>
    </record>

    <!-- Vista de lista extendida -->
    <record id="view_mrp_production_tree_extended" model="ir.ui.view">
        <field name="name">mrp.production.tree.extended</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="production_line" optional="show"/>
                <field name="master_pallet_number" optional="hide"/>
                <field name="total_pallets" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>