<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario extendida para mrp.workcenter -->
    <record id="mrp_workcenter_view_form_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.form.inherit</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">
            
            <!-- Agregar línea de producción después del nombre -->
            <field name="resource_id" position="after">
                <field name="production_line_type"/>
            </field>
            
            <!-- Agregar grupo de estadísticas -->
            <xpath expr="//sheet//group[last()]" position="after">
                <group string="Estadísticas de Paradas" col="4">
                    <field name="total_stoppages"/>
                    <field name="total_stoppage_time"/>
                    <field name="avg_stoppage_duration"/>
                    <button name="action_view_stoppages" type="object" 
                            string="Ver Paradas" class="btn-link"/>
                </group>
            </xpath>
            
        </field>
    </record>

    <!-- Vista de lista extendida -->
    <record id="mrp_workcenter_view_tree_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.tree.inherit</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_tree_view"/>
        <field name="arch" type="xml">
            <field name="resource_id" position="after">
                <field name="production_line_type" optional="show"/>
                <field name="total_stoppages" optional="hide"/>
                <field name="total_stoppage_time" optional="hide"/>
            </field>
        </field>
    </record>

    <!-- Filtros de búsqueda extendidos -->
    <record id="mrp_workcenter_view_search_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.search.inherit</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.view_mrp_workcenter_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="production_line_type"/>
            </field>
            
            <group position="inside">
                <filter name="group_production_line" string="Línea de Producción"
                        context="{'group_by': 'production_line_type'}"/>
            </group>
        </field>
    </record>

</odoo>