<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción principal para categorías de paradas -->
    <record id="action_mrp_stoppage_category" model="ir.actions.act_window">
        <field name="name">Categorías de Paradas</field>
        <field name="res_model">mrp.stoppage.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva categoría de parada
            </p>
            <p>
                Las categorías de paradas permiten clasificar los diferentes tipos de interrupciones
                que pueden ocurrir durante el proceso de fabricación.
            </p>
        </field>
    </record>

    <!-- Vista de lista -->
    <record id="mrp_stoppage_category_view_tree" model="ir.ui.view">
        <field name="name">mrp.stoppage.category.tree</field>
        <field name="model">mrp.stoppage.category</field>
        <field name="arch" type="xml">
            <tree default_order="sequence, name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="production_line"/>
                <field name="stoppage_count"/>
                <field name="total_duration"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="mrp_stoppage_category_view_form" model="ir.ui.view">
        <field name="name">mrp.stoppage.category.form</field>
        <field name="model">mrp.stoppage.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" 
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" 
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="production_line"/>
                            <field name="workcenter_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('production_line', '=', 'all')]}"/>
                        </group>
                    </group>
                    
                    <group string="Descripción">
                        <field name="description" nolabel="1"/>
                    </group>
                    
                    <group string="Estadísticas" col="4">
                        <field name="stoppage_count"/>
                        <field name="total_duration"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="mrp_stoppage_category_view_kanban" model="ir.ui.view">
        <field name="name">mrp.stoppage.category.kanban</field>
        <field name="model">mrp.stoppage.category</field>
        <field name="arch" type="xml">
            <kanban default_order="sequence">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="color"/>
                <field name="production_line"/>
                <field name="stoppage_count"/>
                <field name="total_duration"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" role="button" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a type="edit" class="dropdown-item">Editar</a>
                                    <a type="delete" class="dropdown-item">Eliminar</a>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><t t-esc="record.name.value"/></strong>
                                        <span class="badge badge-pill badge-info"><t t-esc="record.code.value"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.production_line.raw_value != 'all'" 
                                              class="badge badge-secondary">
                                            <t t-esc="record.production_line.value"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="text-muted">
                                            <t t-esc="record.stoppage_count.value"/> paradas
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="mrp_stoppage_category_view_search" model="ir.ui.view">
        <field name="name">mrp.stoppage.category.search</field>
        <field name="model">mrp.stoppage.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="production_line"/>
                
                <filter name="active" string="Activo" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactivo" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="papel_periodico" string="Papel Periódico" 
                        domain="[('production_line', '=', 'papel_periodico')]"/>
                <filter name="cajas" string="Cajas" 
                        domain="[('production_line', '=', 'cajas')]"/>
                <filter name="lamina_micro" string="Lámina Micro" 
                        domain="[('production_line', '=', 'lamina_micro')]"/>
                <filter name="all_lines" string="Todas las Líneas" 
                        domain="[('production_line', '=', 'all')]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter name="group_production_line" string="Línea de Producción"
                            context="{'group_by': 'production_line'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_mrp_stoppage_category" 
              name="Categorías de Paradas"
              parent="mrp.menu_mrp_manufacturing"
              action="action_mrp_stoppage_category"
              sequence="15"/>

</odoo>