<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Reporte de Consumo de Materiales -->
        <record id="action_material_consumption_report" model="ir.actions.report">
            <field name="name">Reporte de Consumo de Materiales</field>
            <field name="model">megastock.material.consumption</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">megastock_inventory_clean.material_consumption_report_template</field>
            <field name="report_file">megastock_inventory_clean.material_consumption_report_template</field>
            <field name="binding_model_id" ref="model_megastock_material_consumption"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Template del Reporte -->
        <template id="material_consumption_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            
                            <div class="row">
                                <div class="col-12">
                                    <h2>Reporte de Consumo de Materiales</h2>
                                    <h3>MEGASTOCK</h3>
                                </div>
                            </div>

                            <div class="row mt32 mb32">
                                <div class="col-6">
                                    <strong>Fecha:</strong> <span t-field="doc.date"/>
                                </div>
                                <div class="col-6">
                                    <strong>Centro de Trabajo:</strong> <span t-field="doc.workcenter_id.name"/>
                                </div>
                            </div>

                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Cantidad</th>
                                        <th>Unidad</th>
                                        <th>Lote</th>
                                        <th>Operador</th>
                                        <th>Costo Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><span t-field="doc.product_id.name"/></td>
                                        <td><span t-field="doc.quantity"/></td>
                                        <td><span t-field="doc.uom_id.name"/></td>
                                        <td><span t-field="doc.lot_id.name"/></td>
                                        <td><span t-field="doc.operator_id.name"/></td>
                                        <td><span t-field="doc.cost_total" t-options="{'widget': 'monetary'}"/></td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="oe_structure"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <!-- Reporte de Egreso de Materia Prima -->
        <record id="action_material_transfer_report" model="ir.actions.report">
            <field name="name">Formulario Egreso Materia Prima</field>
            <field name="model">megastock.material.transfer.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">megastock_inventory_clean.material_transfer_report_template</field>
            <field name="report_file">megastock_inventory_clean.material_transfer_report_template</field>
            <field name="binding_model_id" ref="model_megastock_material_transfer_wizard"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Template del Formulario de Egreso -->
        <template id="material_transfer_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h2><strong>FORMULARIO EGRESO MATERIA PRIMA</strong></h2>
                                    <h3>MEGASTOCKEC DISTRIBUIDORA AGRICOLA S.A</h3>
                                    <p>RUC: 1792617443001</p>
                                </div>
                            </div>

                            <div class="row mt32">
                                <div class="col-6">
                                    <p><strong>Fecha:</strong> <span t-field="doc.transfer_date"/></p>
                                    <p><strong>Operador:</strong> <span t-field="doc.operator_id.name"/></p>
                                    <p><strong>Centro de Trabajo:</strong> <span t-field="doc.workcenter_id.name"/></p>
                                </div>
                                <div class="col-6">
                                    <p><strong>Tipo de Egreso:</strong> <span t-field="doc.transfer_type"/></p>
                                    <p><strong>Estado:</strong> <span t-field="doc.state"/></p>
                                    <p t-if="doc.production_order_id"><strong>Orden de Producción:</strong> <span t-field="doc.production_order_id.name"/></p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <h4>Materiales Transferidos:</h4>
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Material</th>
                                                <th>Ubicación Origen</th>
                                                <th>Cantidad</th>
                                                <th>Unidad</th>
                                                <th>Lote</th>
                                                <th>Observaciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="doc.line_ids" t-as="line">
                                                <tr>
                                                    <td><span t-field="line.product_id.name"/></td>
                                                    <td><span t-field="line.location_src_id.name"/></td>
                                                    <td><span t-field="line.quantity"/></td>
                                                    <td><span t-field="line.uom_id.name"/></td>
                                                    <td><span t-field="line.lot_id.name"/></td>
                                                    <td><span t-field="line.notes"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="row mt32">
                                <div class="col-12">
                                    <p><strong>Observaciones:</strong></p>
                                    <p t-field="doc.notes"/>
                                </div>
                            </div>

                            <div class="row mt32">
                                <div class="col-4">
                                    <p>_______________________</p>
                                    <p class="text-center">Operador</p>
                                </div>
                                <div class="col-4">
                                    <p>_______________________</p>
                                    <p class="text-center">Supervisor</p>
                                </div>
                                <div class="col-4">
                                    <p>_______________________</p>
                                    <p class="text-center">Autorizado por</p>
                                </div>
                            </div>

                            <div class="oe_structure"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>