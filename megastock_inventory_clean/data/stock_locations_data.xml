<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ========== UBICACIONES PRINCIPALES ========== -->
        
        <!-- Almacén Principal MEGASTOCK -->
        <record id="stock_location_megastock_main" model="stock.location">
            <field name="name">Almacén Principal MEGASTOCK</field>
            <field name="location_id" ref="stock.stock_location_stock"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">ALM-MAIN</field>
        </record>

        <!-- ========== ZONA MATERIAS PRIMAS ========== -->
        
        <!-- Zona Principal de Materias Primas -->
        <record id="stock_location_raw_materials" model="stock.location">
            <field name="name">Materias Primas</field>
            <field name="location_id" ref="stock_location_megastock_main"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-MAIN</field>
        </record>

        <!-- Área de Papeles -->
        <record id="stock_location_papers" model="stock.location">
            <field name="name">Área de Papeles</field>
            <field name="location_id" ref="stock_location_raw_materials"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-PAPER</field>
        </record>

        <!-- Ubicación Papel KRAFT -->
        <record id="stock_location_kraft" model="stock.location">
            <field name="name">Papel KRAFT</field>
            <field name="location_id" ref="stock_location_papers"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-KRAFT</field>
            <field name="comment">Almacenamiento de papel KRAFT en diferentes gramajes</field>
        </record>

        <!-- Ubicación Papel Medium -->
        <record id="stock_location_medium" model="stock.location">
            <field name="name">Papel Medium</field>
            <field name="location_id" ref="stock_location_papers"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-MEDIUM</field>
            <field name="comment">Almacenamiento de papel Medium para corrugado</field>
        </record>

        <!-- Ubicación Papel Liner -->
        <record id="stock_location_liner" model="stock.location">
            <field name="name">Papel Liner</field>
            <field name="location_id" ref="stock_location_papers"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-LINER</field>
            <field name="comment">Almacenamiento de papel Liner para exteriores</field>
        </record>

        <!-- ========== ZONA TINTAS ========== -->
        
        <!-- Área de Tintas -->
        <record id="stock_location_inks" model="stock.location">
            <field name="name">Área de Tintas</field>
            <field name="location_id" ref="stock_location_raw_materials"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-INK</field>
            <field name="comment">Almacenamiento de tintas flexográficas con control de temperatura</field>
        </record>

        <!-- Ubicación Tintas CMYK -->
        <record id="stock_location_inks_cmyk" model="stock.location">
            <field name="name">Tintas CMYK</field>
            <field name="location_id" ref="stock_location_inks"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-CMYK</field>
            <field name="comment">Tintas para impresión a cuatro colores</field>
        </record>

        <!-- Ubicación Tintas Especiales -->
        <record id="stock_location_inks_special" model="stock.location">
            <field name="name">Tintas Especiales</field>
            <field name="location_id" ref="stock_location_inks"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-SPEC</field>
            <field name="comment">Tintas personalizadas y colores especiales</field>
        </record>

        <!-- ========== ZONA ADHESIVOS ========== -->
        
        <!-- Área de Adhesivos -->
        <record id="stock_location_adhesives" model="stock.location">
            <field name="name">Área de Adhesivos</field>
            <field name="location_id" ref="stock_location_raw_materials"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-ADH</field>
            <field name="comment">Almacenamiento de adhesivos y gomas</field>
        </record>

        <!-- Ubicación Almidón -->
        <record id="stock_location_starch" model="stock.location">
            <field name="name">Almidón</field>
            <field name="location_id" ref="stock_location_adhesives"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-STARCH</field>
            <field name="comment">Almidón para producción de corrugado</field>
        </record>

        <!-- Ubicación Gomas PVA -->
        <record id="stock_location_pva" model="stock.location">
            <field name="name">Gomas PVA</field>
            <field name="location_id" ref="stock_location_adhesives"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">MP-PVA</field>
            <field name="comment">Gomas PVA para acabados especiales</field>
        </record>

        <!-- ========== ZONA PRODUCTOS EN PROCESO ========== -->
        
        <!-- Área WIP (Work in Progress) -->
        <record id="stock_location_wip" model="stock.location">
            <field name="name">Productos en Proceso (WIP)</field>
            <field name="location_id" ref="stock_location_megastock_main"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">WIP-MAIN</field>
            <field name="comment">Productos en diferentes etapas de producción</field>
        </record>

        <!-- WIP Preprinter -->
        <record id="stock_location_wip_preprinter" model="stock.location">
            <field name="name">WIP - Preprinter</field>
            <field name="location_id" ref="stock_location_wip"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">WIP-PPR</field>
            <field name="comment">Productos en proceso de impresión</field>
        </record>

        <!-- WIP Corrugadora -->
        <record id="stock_location_wip_corrugadora" model="stock.location">
            <field name="name">WIP - Corrugadora</field>
            <field name="location_id" ref="stock_location_wip"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">WIP-CORR</field>
            <field name="comment">Productos en proceso de corrugado</field>
        </record>

        <!-- WIP Troquelado -->
        <record id="stock_location_wip_troquel" model="stock.location">
            <field name="name">WIP - Troquelado</field>
            <field name="location_id" ref="stock_location_wip"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">WIP-TROQ</field>
            <field name="comment">Productos en proceso de troquelado</field>
        </record>

        <!-- ========== ZONA PRODUCTOS TERMINADOS ========== -->
        
        <!-- Área de Productos Terminados -->
        <record id="stock_location_finished_goods" model="stock.location">
            <field name="name">Productos Terminados</field>
            <field name="location_id" ref="stock_location_megastock_main"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">FG-MAIN</field>
            <field name="comment">Productos terminados listos para entrega</field>
        </record>

        <!-- Área Cajas Terminadas -->
        <record id="stock_location_finished_boxes" model="stock.location">
            <field name="name">Cajas Terminadas</field>
            <field name="location_id" ref="stock_location_finished_goods"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">FG-BOXES</field>
            <field name="comment">Cajas de todos los tipos terminadas</field>
        </record>

        <!-- Área Láminas Terminadas -->
        <record id="stock_location_finished_sheets" model="stock.location">
            <field name="name">Láminas Terminadas</field>
            <field name="location_id" ref="stock_location_finished_goods"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">FG-SHEETS</field>
            <field name="comment">Láminas corrugadas terminadas</field>
        </record>

        <!-- ========== ZONA CUARENTENA Y CONTROL CALIDAD ========== -->
        
        <!-- Área de Cuarentena -->
        <record id="stock_location_quarantine" model="stock.location">
            <field name="name">Cuarentena</field>
            <field name="location_id" ref="stock_location_megastock_main"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">QT-MAIN</field>
            <field name="comment">Productos en cuarentena pendientes de control de calidad</field>
        </record>

        <!-- Control de Calidad -->
        <record id="stock_location_quality_control" model="stock.location">
            <field name="name">Control de Calidad</field>
            <field name="location_id" ref="stock_location_megastock_main"/>
            <field name="usage">internal</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">QC-MAIN</field>
            <field name="comment">Área para inspección y control de calidad</field>
        </record>

        <!-- ========== ZONA DE DESPERDICIOS ========== -->
        
        <!-- Área de Desperdicios -->
        <record id="stock_location_scrap" model="stock.location">
            <field name="name">Desperdicios</field>
            <field name="location_id" ref="stock_location_megastock_main"/>
            <field name="usage">inventory</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="barcode">SCRAP</field>
            <field name="comment">Materiales de desperdicio y reciclaje</field>
            <field name="scrap_location">True</field>
        </record>

        <!-- ========== CONFIGURAR UBICACIONES POR DEFECTO ========== -->
        
        <!-- Configurar ubicaciones por defecto en el almacén -->
        <record id="stock.warehouse0" model="stock.warehouse">
            <field name="lot_stock_id" ref="stock_location_megastock_main"/>
            <field name="wh_input_stock_loc_id" ref="stock.stock_location_stock"/>
            <field name="wh_qc_stock_loc_id" ref="stock_location_quality_control"/>
            <field name="wh_output_stock_loc_id" ref="stock.stock_location_output"/>
            <field name="wh_pack_stock_loc_id" ref="stock.stock_location_output"/>
        </record>

    </data>
</odoo>