<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista formulario del Wizard de Transferencia -->
        <record id="view_material_transfer_wizard" model="ir.ui.view">
            <field name="name">megastock.material.transfer.wizard.form</field>
            <field name="model">megastock.material.transfer.wizard</field>
            <field name="arch" type="xml">
                <form string="FORMULARIO EGRESO MATERIA PRIMA">
                    <header>
                        <button name="action_confirm_transfer" type="object" 
                                string="Confirmar Egreso" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_execute_transfer" type="object" 
                                string="Ejecutar Transferencia" class="btn-success"
                                attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                        <button name="action_cancel_transfer" type="object" 
                                string="Cancelar" class="btn-secondary"
                                attrs="{'invisible': [('state', 'in', ['done', 'cancelled'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <span attrs="{'invisible': [('state', '=', 'draft')]}">EGRESO MATERIA PRIMA #</span>
                                <field name="id" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                                <span attrs="{'invisible': [('state', '!=', 'draft')]}">NUEVO EGRESO MATERIA PRIMA</span>
                            </h1>
                        </div>
                        
                        <!-- Información General -->
                        <group string="Información General">
                            <group>
                                <field name="transfer_date" required="1"/>
                                <field name="operator_id" required="1"/>
                                <field name="workcenter_id" required="1"/>
                                <field name="transfer_type" required="1"/>
                            </group>
                            <group>
                                <field name="production_order_id" 
                                       attrs="{'invisible': [('transfer_type', '!=', 'production')]}"/>
                                <field name="work_order_id" 
                                       attrs="{'invisible': [('transfer_type', '!=', 'production')]}"/>
                                <field name="authorized_by" 
                                       attrs="{'invisible': [('state', 'in', ['draft', 'confirmed'])]}"/>
                                <field name="authorization_date" 
                                       attrs="{'invisible': [('state', 'in', ['draft', 'confirmed'])]}"/>
                            </group>
                        </group>

                        <!-- Materiales a Transferir -->
                        <notebook>
                            <page string="Materiales a Transferir">
                                <field name="line_ids" mode="tree" 
                                       attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree string="Líneas de Material" editable="bottom">
                                        <field name="product_id" required="1"/>
                                        <field name="location_src_id" required="1"/>
                                        <field name="lot_id"/>
                                        <field name="available_qty" readonly="1"/>
                                        <field name="quantity" required="1"/>
                                        <field name="uom_id" required="1"/>
                                        <field name="notes"/>
                                    </tree>
                                    
                                    <form string="Línea de Material">
                                        <group>
                                            <group>
                                                <field name="product_id" required="1"/>
                                                <field name="location_src_id" required="1"/>
                                                <field name="lot_id"/>
                                            </group>
                                            <group>
                                                <field name="available_qty" readonly="1"/>
                                                <field name="quantity" required="1"/>
                                                <field name="uom_id" required="1"/>
                                            </group>
                                        </group>
                                        <field name="notes" placeholder="Observaciones adicionales..."/>
                                    </form>
                                </field>
                                
                                <div class="oe_clear">
                                    <button name="action_add_material_line" type="object" 
                                            string="Agregar Material" class="btn-link"
                                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                                </div>
                            </page>
                            
                            <page string="Información Adicional">
                                <group>
                                    <field name="notes" placeholder="Observaciones generales del egreso..."/>
                                    <field name="picking_id" readonly="1" 
                                           attrs="{'invisible': [('picking_id', '=', False)]}"/>
                                </group>
                            </page>
                        </notebook>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista tree del historial de transferencias -->
        <record id="view_material_transfer_wizard_tree" model="ir.ui.view">
            <field name="name">megastock.material.transfer.wizard.tree</field>
            <field name="model">megastock.material.transfer.wizard</field>
            <field name="arch" type="xml">
                <tree string="Egresos de Materia Prima" 
                      decoration-info="state=='draft'" 
                      decoration-warning="state=='confirmed'"
                      decoration-success="state=='done'"
                      decoration-muted="state=='cancelled'">
                    <field name="transfer_date"/>
                    <field name="operator_id"/>
                    <field name="workcenter_id"/>
                    <field name="transfer_type"/>
                    <field name="production_order_id"/>
                    <field name="state" widget="badge" 
                           decoration-info="state=='draft'"
                           decoration-warning="state=='confirmed'"
                           decoration-success="state=='done'"
                           decoration-danger="state=='cancelled'"/>
                </tree>
            </field>
        </record>

        <!-- Vista del historial de consumos -->
        <record id="view_material_consumption_tree" model="ir.ui.view">
            <field name="name">megastock.material.consumption.tree</field>
            <field name="model">megastock.material.consumption</field>
            <field name="arch" type="xml">
                <tree string="Historial de Consumo de Materiales">
                    <field name="date"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="uom_id"/>
                    <field name="workcenter_id"/>
                    <field name="operator_id"/>
                    <field name="transfer_type"/>
                    <field name="cost_total" sum="Total Costo"/>
                </tree>
            </field>
        </record>

        <record id="view_material_consumption_form" model="ir.ui.view">
            <field name="name">megastock.material.consumption.form</field>
            <field name="model">megastock.material.consumption</field>
            <field name="arch" type="xml">
                <form string="Consumo de Material" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="uom_id"/>
                                <field name="cost_total"/>
                            </group>
                            <group>
                                <field name="workcenter_id"/>
                                <field name="operator_id"/>
                                <field name="transfer_type"/>
                                <field name="lot_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="location_src_id"/>
                                <field name="location_dest_id"/>
                            </group>
                            <group>
                                <field name="production_order_id"/>
                                <field name="work_order_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para nuevo egreso -->
        <record id="action_material_transfer_wizard" model="ir.actions.act_window">
            <field name="name">Nuevo Egreso Materia Prima</field>
            <field name="res_model">megastock.material.transfer.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- Acción para historial de egresos -->
        <record id="action_material_transfer_history" model="ir.actions.act_window">
            <field name="name">Historial Egresos Materia Prima</field>
            <field name="res_model">megastock.material.transfer.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <!-- Acción para historial de consumos -->
        <record id="action_material_consumption_history" model="ir.actions.act_window">
            <field name="name">Historial de Consumos</field>
            <field name="res_model">megastock.material.consumption</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>