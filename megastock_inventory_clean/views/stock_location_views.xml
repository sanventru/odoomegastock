<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista extendida de ubicaciones -->
        <record id="view_location_form_megastock" model="ir.ui.view">
            <field name="name">stock.location.form.megastock</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar campos MEGASTOCK -->
                <xpath expr="//field[@name='usage']" position="after">
                    <field name="megastock_location_type"/>
                    <field name="material_category" 
                           attrs="{'invisible': [('megastock_location_type', '!=', 'raw_materials')]}"/>
                </xpath>

                <!-- Agregar campos MEGASTOCK adicionales -->
                <xpath expr="//field[@name='usage']" position="after">
                    
                    <group string="ConfiguraciÃ³n MEGASTOCK">
                        <field name="temperature_controlled"/>
                        <field name="humidity_controlled"/>
                        <field name="max_capacity_tons"/>
                        <field name="current_utilization" widget="progressbar"/>
                    </group>

                </xpath>

            </field>
        </record>

        <!-- Vista tree con campos MEGASTOCK -->
        <record id="view_location_tree_megastock" model="ir.ui.view">
            <field name="name">stock.location.tree.megastock</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_tree2"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='usage']" position="after">
                    <field name="megastock_location_type" optional="show"/>
                    <field name="material_category" optional="hide"/>
                    <field name="current_utilization" optional="show" widget="progressbar"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>