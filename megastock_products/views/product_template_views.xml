<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista de formulario extendida para Product Template -->
        <record id="product_template_form_view_megastock" model="ir.ui.view">
            <field name="name">product.template.form.megastock</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                
                <!-- Agregar campos MEGASTOCK después de la categoría -->
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="megastock_category" required="1"/>
                    <field name="megastock_code" readonly="1" 
                           attrs="{'invisible': [('megastock_category', '=', False)]}"/>
                </xpath>

                <!-- Agregar pestaña de Especificaciones Técnicas -->
                <xpath expr="//notebook" position="inside">
                    <page string="Especificaciones Técnicas MEGASTOCK" 
                          attrs="{'invisible': [('megastock_category', '=', False)]}">
                        
                        <!-- Sección de Dimensiones -->
                        <group string="Dimensiones" col="4">
                            <field name="largo_cm" attrs="{'invisible': [('megastock_category', 'in', ['materias_primas'])]}"/>
                            <field name="ancho_cm" attrs="{'invisible': [('megastock_category', 'in', ['materias_primas'])]}"/>
                            <field name="alto_cm" attrs="{'invisible': [('megastock_category', 'in', ['laminas', 'planchas', 'separadores', 'materias_primas'])]}"/>
                            <field name="ceja_cm" attrs="{'invisible': [('megastock_category', '!=', 'cajas')]}"/>
                        </group>

                        <!-- Sección de Especificaciones de Cartón -->
                        <group string="Especificaciones de Cartón" col="4" 
                               attrs="{'invisible': [('megastock_category', 'in', ['papel', 'materias_primas'])]}">
                            <field name="flauta"/>
                            <field name="test_value"/>
                            <field name="kl_value"/>
                            <field name="gramaje" attrs="{'invisible': [('megastock_category', '=', 'cajas')]}"/>
                        </group>

                        <!-- Sección de Material e Impresión -->
                        <group string="Material e Impresión" col="4"
                               attrs="{'invisible': [('megastock_category', '=', 'papel')]}">
                            <field name="material_type"/>
                            <field name="colors_printing"/>
                            <field name="tipo_caja" attrs="{'invisible': [('megastock_category', '!=', 'cajas')]}"/>
                        </group>

                        <!-- Sección de Descripción Técnica -->
                        <group string="Descripción Técnica Generada">
                            <field name="technical_description" readonly="1" nolabel="1"/>
                        </group>

                        <!-- Botones de acción -->
                        <div class="oe_button_box">
                            <button name="action_generate_megastock_code" type="object" 
                                    class="btn-primary" string="Generar Código"
                                    attrs="{'invisible': [('megastock_code', '!=', False)]}"/>
                            <button name="action_update_technical_description" type="object" 
                                    class="btn-secondary" string="Actualizar Descripción"/>
                        </div>

                    </page>
                </xpath>

            </field>
        </record>

        <!-- Vista de lista extendida -->
        <record id="product_template_tree_view_megastock" model="ir.ui.view">
            <field name="name">product.template.tree.megastock</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                
                <!-- Agregar columna de código MEGASTOCK -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="megastock_code" optional="show"/>
                    <field name="megastock_category" optional="hide"/>
                </xpath>

            </field>
        </record>

        <!-- Vista de búsqueda extendida -->
        <record id="product_template_search_view_megastock" model="ir.ui.view">
            <field name="name">product.template.search.megastock</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                
                <!-- Agregar filtros de búsqueda -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="megastock_code" string="Código MEGASTOCK"/>
                </xpath>

                <!-- Agregar filtros de grupo -->
                <xpath expr="//filter[@name='consumable']" position="after">
                    <separator/>
                    <filter string="CAJAS" name="filter_cajas" domain="[('megastock_category', '=', 'cajas')]"/>
                    <filter string="LÁMINAS" name="filter_laminas" domain="[('megastock_category', '=', 'laminas')]"/>
                    <filter string="PAPEL PERIÓDICO" name="filter_papel" domain="[('megastock_category', '=', 'papel')]"/>
                    <filter string="PLANCHAS" name="filter_planchas" domain="[('megastock_category', '=', 'planchas')]"/>
                    <filter string="SEPARADORES" name="filter_separadores" domain="[('megastock_category', '=', 'separadores')]"/>
                    <filter string="MATERIAS PRIMAS" name="filter_materias_primas" domain="[('megastock_category', '=', 'materias_primas')]"/>
                </xpath>

                <!-- Agregar agrupaciones -->
                <xpath expr="//filter[@name='categ_id']" position="after">
                    <filter string="Categoría MEGASTOCK" name="group_megastock_category" context="{'group_by': 'megastock_category'}"/>
                    <filter string="Material" name="group_material" context="{'group_by': 'material_type'}"/>
                    <filter string="Tipo de Caja" name="group_tipo_caja" context="{'group_by': 'tipo_caja'}"/>
                </xpath>

            </field>
        </record>

        <!-- Acción de menú para Productos MEGASTOCK -->
        <record id="action_product_template_megastock" model="ir.actions.act_window">
            <field name="name">Productos MEGASTOCK</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('megastock_category', '!=', False)]</field>
            <field name="context">{
                'search_default_filter_cajas': 1,
                'default_megastock_category': 'cajas'
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crea tu primer producto MEGASTOCK!
                </p>
                <p>
                    Los productos MEGASTOCK tienen especificaciones técnicas personalizadas
                    y códigos automáticos según la categoría.
                </p>
            </field>
        </record>

        <!-- Submenu para cada categoría -->
        <record id="action_product_cajas" model="ir.actions.act_window">
            <field name="name">CAJAS</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('megastock_category', '=', 'cajas')]</field>
            <field name="context">{'default_megastock_category': 'cajas'}</field>
        </record>

        <record id="action_product_laminas" model="ir.actions.act_window">
            <field name="name">LÁMINAS</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('megastock_category', '=', 'laminas')]</field>
            <field name="context">{'default_megastock_category': 'laminas'}</field>
        </record>

        <record id="action_product_papel" model="ir.actions.act_window">
            <field name="name">PAPEL PERIÓDICO</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('megastock_category', '=', 'papel')]</field>
            <field name="context">{'default_megastock_category': 'papel'}</field>
        </record>

        <record id="action_product_materias_primas" model="ir.actions.act_window">
            <field name="name">MATERIAS PRIMAS</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('megastock_category', '=', 'materias_primas')]</field>
            <field name="context">{'default_megastock_category': 'materias_primas'}</field>
        </record>

    </data>
</odoo>