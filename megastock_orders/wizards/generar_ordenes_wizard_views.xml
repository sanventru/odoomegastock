<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para el wizard de generar órdenes de trabajo -->
    <record id="view_generar_ordenes_wizard_form" model="ir.ui.view">
        <field name="name">megastock.generar.ordenes.wizard.form</field>
        <field name="model">megastock.generar.ordenes.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Órdenes de Trabajo">
                <group>
                    <field name="requiere_doblez"/>
                </group>
                <footer>
                    <button string="Registrar" name="action_registrar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard -->
    <record id="action_generar_ordenes_wizard" model="ir.actions.act_window">
        <field name="name">Generar Órdenes de Trabajo</field>
        <field name="res_model">megastock.generar.ordenes.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
