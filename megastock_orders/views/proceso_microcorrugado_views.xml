<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulario Proceso Microcorrugado -->
    <record id="view_proceso_microcorrugado_form" model="ir.ui.view">
        <field name="name">megastock.proceso.microcorrugado.form</field>
        <field name="model">megastock.proceso.microcorrugado</field>
        <field name="arch" type="xml">
            <form string="Proceso Microcorrugado">
                <header>
                    <button name="action_finalizar" string="Finalizar Microcorrugado" type="object"
                            class="oe_highlight" icon="fa-check"
                            attrs="{'invisible': [('estado', '=', 'finalizado')]}"/>
                    <field name="estado" widget="statusbar" statusbar_visible="iniciado,finalizado"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="work_order_id" readonly="1"/>
                        </h1>
                        <h3>
                            Proceso Microcorrugado
                        </h3>
                    </div>

                    <group>
                        <group name="info_fechas" string="Información de Fechas">
                            <field name="fecha_inicio" readonly="1"/>
                            <field name="fecha_fin" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Materia Prima" name="materia_prima">
                            <field name="materia_prima_ids" attrs="{'readonly': [('estado', '=', 'finalizado')]}">
                                <tree string="Materia Prima" editable="bottom">
                                    <field name="codigo_imp"/>
                                    <field name="ancho"/>
                                    <field name="gramaje"/>
                                    <field name="peso_inicial"/>
                                    <field name="peso_final"/>
                                    <field name="consumo_kg" readonly="1"/>
                                    <field name="metros_producidos"/>
                                    <field name="medium_tiro_corru_1"/>
                                    <field name="medium_tiro_corru_2"/>
                                    <field name="medium_tiro_corru_3"/>
                                    <field name="medium_tiro_corru_4"/>
                                </tree>
                            </field>
                        </page>
                        <page string="TIRO" name="tiro">
                            <field name="tiro_ids" attrs="{'readonly': [('estado', '=', 'finalizado')]}">
                                <tree string="TIRO" editable="bottom">
                                    <field name="medium_tiro_corru_1"/>
                                    <field name="medium_tiro_corru_2"/>
                                    <field name="medium_tiro_corru_3"/>
                                    <field name="medium_tiro_corru_4"/>
                                </tree>
                            </field>
                        </page>
                        <page string="RETIRO" name="retiro">
                            <field name="retiro_ids" attrs="{'readonly': [('estado', '=', 'finalizado')]}">
                                <tree string="RETIRO" editable="bottom">
                                    <field name="medium_retiro_corru_1"/>
                                    <field name="medium_retiro_corru_2"/>
                                    <field name="medium_retiro_corru_3"/>
                                    <field name="medium_retiro_corru_4"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Personal de Corrugación" name="personal">
                            <field name="personal_ids" attrs="{'readonly': [('estado', '=', 'finalizado')]}">
                                <tree string="Personal de Corrugación" editable="bottom">
                                    <field name="empleado_id"/>
                                    <field name="turno"/>
                                    <field name="hora_ingreso"/>
                                    <field name="hora_final"/>
                                    <field name="horas_total" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Cuadre Inicio de Corrida" name="cuadre_corrida">
                            <group>
                                <group string="Cuadre Inicio de Corrida">
                                    <field name="cuadre_empalme" attrs="{'readonly': [('estado', '=', 'finalizado')]}"/>
                                    <field name="cuadre_operativo" attrs="{'readonly': [('estado', '=', 'finalizado')]}"/>
                                </group>
                            </group>
                            <group>
                                <field name="cuadre_causa_operativo" nolabel="1" placeholder="Causa Operativo..." attrs="{'readonly': [('estado', '=', 'finalizado')]}"/>
                                <field name="cuadre_otros_especifique" nolabel="1" placeholder="Otros Especifique..." attrs="{'readonly': [('estado', '=', 'finalizado')]}"/>
                            </group>
                        </page>
                        <page string="Desperdicios y Cantidad" name="desperdicios">
                            <group>
                                <group string="Resultados Finales">
                                    <field name="sumatoria_total_desperdicios" attrs="{'readonly': [('estado', '=', 'finalizado')]}"/>
                                    <field name="cantidad_entregada" attrs="{'readonly': [('estado', '=', 'finalizado')]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Materiales" name="materiales">
                            <field name="material_ids" attrs="{'readonly': [('estado', '=', 'finalizado')]}">
                                <tree string="Materiales" editable="bottom">
                                    <field name="producto_id"/>
                                    <field name="cantidad"/>
                                    <field name="uom_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Observaciones" name="observaciones">
                            <group>
                                <field name="observaciones" nolabel="1" placeholder="Observaciones del proceso..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Lista Proceso Microcorrugado -->
    <record id="view_proceso_microcorrugado_tree" model="ir.ui.view">
        <field name="name">megastock.proceso.microcorrugado.tree</field>
        <field name="model">megastock.proceso.microcorrugado</field>
        <field name="arch" type="xml">
            <tree string="Procesos Microcorrugado" decoration-success="estado=='finalizado'" decoration-info="estado=='iniciado'">
                <field name="work_order_id"/>
                <field name="fecha_inicio"/>
                <field name="fecha_fin"/>
                <field name="estado" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Búsqueda -->
    <record id="view_proceso_microcorrugado_search" model="ir.ui.view">
        <field name="name">megastock.proceso.microcorrugado.search</field>
        <field name="model">megastock.proceso.microcorrugado</field>
        <field name="arch" type="xml">
            <search string="Buscar Procesos Microcorrugado">
                <field name="work_order_id"/>
                <filter string="Iniciados" name="iniciados" domain="[('estado', '=', 'iniciado')]"/>
                <filter string="Finalizados" name="finalizados" domain="[('estado', '=', 'finalizado')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_estado" context="{'group_by': 'estado'}"/>
                    <filter string="Fecha Inicio" name="group_fecha_inicio" context="{'group_by': 'fecha_inicio'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de Ventana -->
    <record id="action_proceso_microcorrugado" model="ir.actions.act_window">
        <field name="name">Procesos Microcorrugado</field>
        <field name="res_model">megastock.proceso.microcorrugado</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_proceso_microcorrugado_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡No hay procesos Microcorrugado registrados!
            </p>
            <p>
                Los procesos Microcorrugado se crean automáticamente al finalizar Preprinter.
            </p>
        </field>
    </record>

    <!-- Los procesos Microcorrugado se acceden desde las órdenes de trabajo, no necesitan menú propio -->
</odoo>
