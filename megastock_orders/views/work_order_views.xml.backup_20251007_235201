    <!-- Vista de Formulario de Órdenes de Trabajo -->
    <record id="view_work_order_form" model="ir.ui.view">
        <field name="name">megastock.work.order.form</field>
        <field name="model">megastock.work.order</field>
        <field name="arch" type="xml">
            <form string="Orden de Trabajo">
                <header>
                    <button name="action_programar" string="Programar" type="object" 
                            class="oe_highlight" icon="fa-calendar"
                            attrs="{'invisible': [('estado', '!=', 'borrador')]}"/>
                    <button name="action_iniciar" string="Iniciar" type="object" 
                            class="oe_highlight" icon="fa-play"
                            attrs="{'invisible': [('estado', '!=', 'programada')]}"/>
                    <button name="action_pausar" string="Pausar" type="object" 
                            icon="fa-pause"
                            attrs="{'invisible': [('estado', '!=', 'en_proceso')]}"/>
                    <button name="action_completar" string="Completar" type="object" 
                            class="oe_highlight" icon="fa-check"
                            attrs="{'invisible': [('estado', 'not in', ['en_proceso', 'pausada'])]}"/>
                    <button name="action_cancelar" string="Cancelar" type="object" 
                            icon="fa-times"
                            attrs="{'invisible': [('estado', 'in', ['completada', 'cancelada'])]}"/>
                    <field name="estado" widget="statusbar" statusbar_visible="borrador,programada,en_proceso,completada"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="numero_orden" readonly="1"/>
