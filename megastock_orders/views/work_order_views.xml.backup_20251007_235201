                        <h2>
                            <field name="grupo_planificacion" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group name="general_info" string="Información General">
                            <field name="fecha_creacion" readonly="1"/>
                            <field name="fecha_programada"/>
                            <field name="tipo_combinacion" readonly="1"/>
                            <field name="cantidad_ordenes" readonly="1"/>
                            <field name="progreso" widget="progressbar" readonly="1"/>
                        </group>
                        <group name="assignment_info" string="Asignación">
                            <field name="operador"/>
                            <field name="maquina"/>
