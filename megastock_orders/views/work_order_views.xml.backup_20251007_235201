                        </group>
                    </group>

                    <group>
                        <group name="technical_specs" string="Especificaciones Técnicas">
                            <field name="bobina_utilizada" readonly="1"/>
                            <field name="bobina_asignada_id"/>
                            <field name="ancho_utilizado" readonly="1"/>
