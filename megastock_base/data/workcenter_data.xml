<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- CENTRO DE TRABAJO: PREPRINTER -->
        <record id="workcenter_preprinter" model="mrp.workcenter">
            <field name="name">PREPRINTER</field>
            <field name="code">PPR</field>
            <field name="note">Impresión flexográfica - Proceso de impresión de diseños</field>
            <field name="time_efficiency">100</field>
            <field name="time_start">15</field>  <!-- 15 minutos setup -->
            <field name="time_stop">5</field>   <!-- 5 minutos limpieza -->
            <field name="costs_hour">25.0</field>
            <field name="default_capacity">100</field>   <!-- Unidades por hora -->
            <field name="color">2</field>       <!-- Color naranja -->
        </record>

