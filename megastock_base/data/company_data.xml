<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Configuración de la empresa MEGASTOCK -->
        <record id="base.main_company" model="res.company">
            <field name="name">MEGASTOCKEC DISTRIBUIDORA AGRICOLA S.A</field>
            <field name="vat">1792617443001</field>
            <field name="street">AV. INTEROCEANICA S/N CC. PASEO SAN FRANCISCO</field>
            <field name="city">Quito</field>
            <field name="zip">170135</field>
            <field name="country_id" ref="base.ec"/>
            <field name="currency_id" ref="base.USD"/>
            <field name="email">info@megastock.ec</field>
            <field name="phone">+593-2-XXXXXXX</field>
            <field name="website">https://megastock.ec</field>
            <field name="production_manager">Gabriela Encarnación</field>
        </record>

        <!-- Configuración fiscal Ecuador - IVA 15% -->
        <record id="tax_iva_15_sale" model="account.tax">
            <field name="name">IVA 15% (Ventas)</field>
            <field name="amount">15.0</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="sequence">1</field>
        </record>

        <record id="tax_iva_15_purchase" model="account.tax">
            <field name="name">IVA 15% (Compras)</field>
            <field name="amount">15.0</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">purchase</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="sequence">1</field>
        </record>

        <!-- Configuración de moneda y parámetros -->
        <record id="base.main_company" model="res.company">
            <field name="account_sale_tax_id" ref="tax_iva_15_sale"/>
            <field name="account_purchase_tax_id" ref="tax_iva_15_purchase"/>
        </record>

    </data>
</odoo>