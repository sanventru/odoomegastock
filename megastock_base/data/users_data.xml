<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- USUARIOS MEGASTOCK -->
        
        <!-- Usuario: Gabriela Encarnación - Administrador de Producción -->
        <record id="user_gabriela_encarnacion" model="res.users">
            <field name="name">Gabriela Encarnación</field>
            <field name="login">gabriela.encarnacion@megastock.ec</field>
            <field name="email">gabriela.encarnacion@megastock.ec</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(4, ref('megastock_base.group_megastock_planning')), 
                                           (4, ref('base.group_user')), 
                                           (4, ref('base.group_partner_manager'))]"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Usuario Template: Comercial -->
        <record id="user_template_commercial" model="res.users">
            <field name="name">Usuario Comercial</field>
            <field name="login">comercial@megastock.ec</field>
            <field name="email">comercial@megastock.ec</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(4, ref('megastock_base.group_megastock_commercial')), 
                                           (4, ref('base.group_user'))]"/>
            <field name="active" eval="False"/>  <!-- Template inactivo -->
        </record>

        <!-- Usuario Template: Operador Preprinter -->
        <record id="user_template_operator_preprinter" model="res.users">
            <field name="name">Operador Preprinter</field>
            <field name="login">operador.preprinter@megastock.ec</field>
            <field name="email">operador.preprinter@megastock.ec</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(4, ref('megastock_base.group_megastock_operators')), 
                                           (4, ref('base.group_user'))]"/>
            <field name="active" eval="False"/>  <!-- Template inactivo -->
        </record>

        <!-- Usuario Template: Operador Corrugadora -->
        <record id="user_template_operator_corrugadora" model="res.users">
            <field name="name">Operador Corrugadora</field>
            <field name="login">operador.corrugadora@megastock.ec</field>
            <field name="email">operador.corrugadora@megastock.ec</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(4, ref('megastock_base.group_megastock_operators')), 
                                           (4, ref('base.group_user'))]"/>
            <field name="active" eval="False"/>  <!-- Template inactivo -->
        </record>

        <!-- Usuario Template: Supervisor -->
        <record id="user_template_supervisor" model="res.users">
            <field name="name">Supervisor Producción</field>
            <field name="login">supervisor@megastock.ec</field>
            <field name="email">supervisor@megastock.ec</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(4, ref('megastock_base.group_megastock_supervisors')), 
                                           (4, ref('base.group_user'))]"/>
            <field name="active" eval="False"/>  <!-- Template inactivo -->
        </record>

        <!-- CONFIGURACIÓN DE COMPAÑÍA -->
        <record id="base.main_company" model="res.company">
            <field name="user_ids" eval="[(4, ref('user_gabriela_encarnacion'))]"/>
        </record>

    </data>
</odoo>