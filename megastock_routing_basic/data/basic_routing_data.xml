<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ========== CONFIGURACIÓN BÁSICA DE PARÁMETROS ========== -->
        
        <!-- Configuración general MEGASTOCK -->
        <record id="param_megastock_routing_enabled" model="ir.config_parameter">
            <field name="key">megastock.routing_enabled</field>
            <field name="value">True</field>
        </record>

        <record id="param_megastock_default_efficiency" model="ir.config_parameter">
            <field name="key">megastock.default_routing_efficiency</field>
            <field name="value">85</field>
        </record>

        <record id="param_megastock_corrugado_type" model="ir.config_parameter">
            <field name="key">megastock.corrugado_production_type</field>
            <field name="value">standard</field>
        </record>

        <!-- Configuración de tiempos de producción -->
        <record id="param_megastock_setup_time" model="ir.config_parameter">
            <field name="key">megastock.default_setup_time_minutes</field>
            <field name="value">30</field>
        </record>

        <record id="param_megastock_cleanup_time" model="ir.config_parameter">
            <field name="key">megastock.default_cleanup_time_minutes</field>
            <field name="value">15</field>
        </record>

    </data>
</odoo>