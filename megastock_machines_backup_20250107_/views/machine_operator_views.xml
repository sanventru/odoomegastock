<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista formulario de Operador de Máquina -->
    <record id="machine_operator_form_view" model="ir.ui.view">
        <field name="name">megastock.machine.operator.form</field>
        <field name="model">megastock.machine.operator</field>
        <field name="arch" type="xml">
            <form string="Operador de Máquina">
                
                <header>
                    <button name="toggle_availability" string="Cambiar Disponibilidad" 
                            type="object" class="btn-primary"/>
                    <button name="action_assign_to_workcenter" string="Asignar a Máquina" 
                            type="object" class="btn-secondary"/>
                    <button name="action_change_shift" string="Cambiar Turno" 
                            type="object" class="btn-secondary"/>
                    <field name="current_status" widget="statusbar" 
                           statusbar_visible="available,assigned,on_break"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_update_performance" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-tachometer">
                            <field name="overall_performance" widget="statinfo" 
                                   string="Performance"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-cogs">
                            <field name="workcenters_count" widget="statinfo" 
                                   string="Máquinas Certificadas"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Inactivo" 
                            bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nombre del operador"/></h1>
                        <h3><field name="operator_code" placeholder="Código del operador"/></h3>
                    </div>
                    
                    <group>
                        <group string="Información Básica">
                            <field name="employee_id"/>
                            <field name="active"/>
                            <field name="hire_date"/>
                            <field name="certification_level"/>
                        </group>
                        
                        <group string="Experiencia">
                            <field name="years_experience"/>
                            <field name="experience_current_machine"/>
                            <field name="can_perform_basic_maintenance"/>
                            <field name="last_safety_training"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Turnos">
                            <field name="preferred_shift"/>
                            <field name="current_shift"/>
                        </group>
                        
                        <group string="Centros de Trabajo">
                            <field name="primary_workcenter_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Certificaciones">
                            <field name="certified_workcenters">
                                <tree>
                                    <field name="name"/>
                                    <field name="machine_status" widget="badge"/>
                                    <field name="oee_overall" widget="percentage"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Performance">
                            <group>
                                <group string="Calificaciones">
                                    <field name="efficiency_rating" widget="percentage"/>
                                    <field name="quality_rating" widget="percentage"/>
                                    <field name="safety_rating" widget="percentage"/>
                                </group>
                                
                                <group string="Performance General">
                                    <field name="overall_performance" widget="progressbar" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Vista lista de Operadores -->
    <record id="machine_operator_tree_view" model="ir.ui.view">
        <field name="name">megastock.machine.operator.tree</field>
        <field name="model">megastock.machine.operator</field>
        <field name="arch" type="xml">
            <tree string="Operadores de Máquina" decoration-muted="not active">
                <field name="display_name"/>
                <field name="certification_level" widget="badge"/>
                <field name="primary_workcenter_id"/>
                <field name="current_status" widget="badge"
                       decoration-success="current_status == 'available'"
                       decoration-warning="current_status in ['on_break', 'training']"
                       decoration-danger="current_status in ['sick']"
                       decoration-info="current_status in ['assigned', 'vacation']"/>
                <field name="current_shift"/>
                <field name="overall_performance" widget="percentage"/>
                <field name="workcenters_count"/>
                <field name="years_experience"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Vista kanban de Operadores -->
    <record id="machine_operator_kanban_view" model="ir.ui.view">
        <field name="name">megastock.machine.operator.kanban</field>
        <field name="model">megastock.machine.operator</field>
        <field name="arch" type="xml">
            <kanban default_group_by="current_status">
                <field name="display_name"/>
                <field name="certification_level"/>
                <field name="primary_workcenter_id"/>
                <field name="current_status"/>
                <field name="overall_performance"/>
                <field name="workcenters_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary"><strong><field name="display_name"/></strong></div>
                                    <div class="o_secondary">
                                        <field name="certification_level" widget="badge"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Máquina:</strong><br/>
                                        <field name="primary_workcenter_id"/>
                                    </div>
                                    <div class="col-6">
                                        <strong>Performance:</strong><br/>
                                        <field name="overall_performance" widget="percentage"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <span class="badge badge-secondary">
                                            <field name="workcenters_count"/> máquinas certificadas
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vista búsqueda/filtros -->
    <record id="machine_operator_search_view" model="ir.ui.view">
        <field name="name">megastock.machine.operator.search</field>
        <field name="model">megastock.machine.operator</field>
        <field name="arch" type="xml">
            <search string="Buscar Operadores">
                <field name="name" string="Nombre/Código" 
                       filter_domain="['|', ('name', 'ilike', self), ('operator_code', 'ilike', self)]"/>
                <field name="primary_workcenter_id"/>
                <field name="certified_workcenters"/>
                
                <separator/>
                <filter string="Disponibles" name="available" 
                        domain="[('current_status', '=', 'available')]"/>
                <filter string="Asignados" name="assigned" 
                        domain="[('current_status', '=', 'assigned')]"/>
                <filter string="En Descanso" name="on_break" 
                        domain="[('current_status', '=', 'on_break')]"/>
                
                <separator/>
                <filter string="Aprendices" name="trainee" 
                        domain="[('certification_level', '=', 'trainee')]"/>
                <filter string="Junior" name="junior" 
                        domain="[('certification_level', '=', 'junior')]"/>
                <filter string="Senior" name="senior" 
                        domain="[('certification_level', '=', 'senior')]"/>
                <filter string="Expertos" name="expert" 
                        domain="[('certification_level', '=', 'expert')]"/>
                
                <separator/>
                <filter string="Mantenimiento Básico" name="maintenance_capable" 
                        domain="[('can_perform_basic_maintenance', '=', True)]"/>
                <filter string="Alto Performance (&gt; 90%)" name="high_performance" 
                        domain="[('overall_performance', '&gt;', 90)]"/>
                
                <separator/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado Actual" name="group_status" 
                            context="{'group_by': 'current_status'}"/>
                    <filter string="Nivel Certificación" name="group_certification" 
                            context="{'group_by': 'certification_level'}"/>
                    <filter string="Máquina Principal" name="group_workcenter" 
                            context="{'group_by': 'primary_workcenter_id'}"/>
                    <filter string="Turno Actual" name="group_shift" 
                            context="{'group_by': 'current_shift'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Vista formulario de Turno de Operador -->
    <record id="operator_shift_form_view" model="ir.ui.view">
        <field name="name">megastock.operator.shift.form</field>
        <field name="model">megastock.operator.shift</field>
        <field name="arch" type="xml">
            <form string="Turno de Operador">
                <header>
                    <field name="status" widget="statusbar" 
                           statusbar_visible="scheduled,started,completed"/>
                </header>
                <sheet>
                    <group>
                        <group string="Información del Turno">
                            <field name="operator_id"/>
                            <field name="workcenter_id"/>
                            <field name="date"/>
                            <field name="shift_type"/>
                        </group>
                        
                        <group string="Horarios">
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="duration_planned" widget="float_time"/>
                        </group>
                    </group>
                    
                    <group string="Registro Real" attrs="{'invisible': [('status', '=', 'scheduled')]}">
                        <group>
                            <field name="actual_start_time"/>
                            <field name="actual_end_time"/>
                        </group>
                        <group>
                            <field name="duration_actual" widget="float_time"/>
                        </group>
                    </group>
                    
                    <group string="Observaciones">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista lista de Turnos -->
    <record id="operator_shift_tree_view" model="ir.ui.view">
        <field name="name">megastock.operator.shift.tree</field>
        <field name="model">megastock.operator.shift</field>
        <field name="arch" type="xml">
            <tree string="Turnos de Operadores">
                <field name="date"/>
                <field name="operator_id"/>
                <field name="workcenter_id"/>
                <field name="shift_type" widget="badge"/>
                <field name="start_time" widget="datetime"/>
                <field name="end_time" widget="datetime"/>
                <field name="duration_planned" widget="float_time"/>
                <field name="duration_actual" widget="float_time"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'completed'"
                       decoration-warning="status in ['scheduled', 'started']"
                       decoration-danger="status == 'absent'"/>
            </tree>
        </field>
    </record>
    
    <!-- Acciones de ventana -->
    <record id="action_machine_operators" model="ir.actions.act_window">
        <field name="name">Operadores de Máquina</field>
        <field name="res_model">megastock.machine.operator</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primer operador de máquina!
            </p>
            <p>
                Los operadores certificados pueden operar múltiples máquinas
                y tienen diferentes niveles de certificación y performance.
            </p>
        </field>
    </record>
    
    <record id="action_operator_shifts" model="ir.actions.act_window">
        <field name="name">Turnos de Operadores</field>
        <field name="res_model">megastock.operator.shift</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Programa tu primer turno!
            </p>
            <p>
                Gestiona los turnos de trabajo de los operadores 
                asignados a cada máquina.
            </p>
        </field>
    </record>
    
    <!-- Menús -->
    <menuitem id="menu_megastock_machines_root" 
              name="MEGASTOCK Máquinas" 
              parent="mrp.menu_mrp_root" 
              sequence="20"/>
              
    <menuitem id="menu_machine_operators" 
              name="Operadores" 
              parent="menu_megastock_machines_root" 
              action="action_machine_operators" 
              sequence="10"/>
              
    <menuitem id="menu_operator_shifts" 
              name="Turnos" 
              parent="menu_megastock_machines_root" 
              action="action_operator_shifts" 
              sequence="20"/>

</odoo>