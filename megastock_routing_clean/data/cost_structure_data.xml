<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ========== ESTRUCTURA DE COSTOS MEGASTOCK ========== -->
        
        <!-- ========== CONFIGURACIÓN DE COSTOS POR CATEGORIA ========== -->
        
        <!-- Categoría de Costos: Materia Prima -->
        <record id="cost_category_raw_materials" model="product.category">
            <field name="name">Costos - Materias Primas</field>
            <field name="parent_id" ref="product.product_category_all"/>
            <field name="property_cost_method">fifo</field>
            <field name="property_valuation">real_time</field>
            <field name="property_account_income_categ_id" ref="account.demo_sale_of_product_cat"/>
            <field name="property_account_expense_categ_id" ref="account.demo_expense_cat"/>
        </record>
        
        <!-- Categoría de Costos: Mano de Obra -->
        <record id="cost_category_labor" model="product.category">
            <field name="name">Costos - Mano de Obra</field>
            <field name="parent_id" ref="product.product_category_all"/>
            <field name="property_cost_method">standard</field>
            <field name="property_valuation">real_time</field>
        </record>
        
        <!-- Categoría de Costos: Gastos Generales -->
        <record id="cost_category_overhead" model="product.category">
            <field name="name">Costos - Gastos Generales</field>
            <field name="parent_id" ref="product.product_category_all"/>
            <field name="property_cost_method">standard</field>
            <field name="property_valuation">real_time</field>
        </record>
        
        <!-- ========== PRODUCTOS DE COSTO (PARA CÁLCULOS) ========== -->
        
        <!-- Costo Mano de Obra - Operador -->
        <record id="cost_product_labor_operator" model="product.product">
            <field name="name">Mano de Obra - Operador</field>
            <field name="categ_id" ref="cost_category_labor"/>
            <field name="type">service</field>
            <field name="default_code">COST-LABOR-OP</field>
            <field name="standard_price">8.50</field>  <!-- USD/hora operador -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description">
Costo hora de operador de máquina
Incluye: salario base + beneficios sociales + cargas patronales
Basado en: Salario promedio operador MEGASTOCK
            </field>
        </record>
        
        <!-- Costo Mano de Obra - Supervisor -->
        <record id="cost_product_labor_supervisor" model="product.product">
            <field name="name">Mano de Obra - Supervisor</field>
            <field name="categ_id" ref="cost_category_labor"/>
            <field name="type">service</field>
            <field name="default_code">COST-LABOR-SUP</field>
            <field name="standard_price">15.00</field>  <!-- USD/hora supervisor -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description">
Costo hora de supervisor de producción
Incluye supervisión directa e indirecta
            </field>
        </record>
        
        <!-- Costo Energía Eléctrica -->
        <record id="cost_product_electricity" model="product.product">
            <field name="name">Energía Eléctrica Industrial</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">COST-ENERGY-ELEC</field>
            <field name="standard_price">0.08</field>  <!-- USD/kWh Ecuador -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_kgm"/>  <!-- kWh -->
            <field name="uom_po_id" ref="uom.product_uom_kgm"/>
            <field name="description">
Tarifa energía eléctrica industrial Ecuador
Tarifa vigente 2025: $0.08 USD/kWh
Incluye: energía + demanda + factor potencia
            </field>
        </record>
        
        <!-- Costo Depreciación Máquinas -->
        <record id="cost_product_machine_depreciation" model="product.product">
            <field name="name">Depreciación Maquinaria</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">COST-DEPR-MACH</field>
            <field name="standard_price">12.00</field>  <!-- USD/hora promedio -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description">
Depreciación maquinaria por hora operativa
Calculado sobre vida útil 10 años
Incluye valor residual estimado
            </field>
        </record>
        
        <!-- Costo Mantenimiento -->
        <record id="cost_product_maintenance" model="product.product">
            <field name="name">Mantenimiento Maquinaria</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">COST-MAINT</field>
            <field name="standard_price">3.50</field>  <!-- USD/hora -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description">
Costo mantenimiento preventivo y correctivo
Promedio anual distribuido por hora operativa
Incluye: repuestos + mano obra técnica
            </field>
        </record>
        
        <!-- Costo Gastos Generales de Planta -->
        <record id="cost_product_plant_overhead" model="product.product">
            <field name="name">Gastos Generales de Planta</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">COST-PLANT-OH</field>
            <field name="standard_price">5.00</field>  <!-- USD/hora -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description">
Gastos generales de planta por hora productiva
Incluye: alquiler, seguros, servicios básicos, supervisión general
Distribuido por horas máquina totales
            </field>
        </record>
        
        <!-- ========== ESTRUCTURA DE COSTOS POR CENTRO DE TRABAJO ========== -->
        
        <!-- Costo Específico PREPRINTER -->
        <record id="cost_structure_preprinter" model="product.product">
            <field name="name">Costo Operación PREPRINTER</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">COST-PPR-TOTAL</field>
            <field name="standard_price">32.00</field>  <!-- USD/hora total -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description">
Costo total operación PREPRINTER por hora:
- Mano obra operador: $8.50
- Energía (45 kW): $3.60  
- Depreciación: $12.00
- Mantenimiento: $3.50
- Gastos generales: $5.00
TOTAL: $32.60/hora
            </field>
        </record>
        
        <!-- Costo Específico CORRUGADORA -->
        <record id="cost_structure_corrugadora" model="product.product">
            <field name="name">Costo Operación CORRUGADORA</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">COST-CORR-TOTAL</field>
            <field name="standard_price">89.10</field>  <!-- USD/hora total -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description">
Costo total operación CORRUGADORA por hora:
- Mano obra operador: $8.50
- Energía (75 kW): $6.00
- Depreciación (máquina crítica): $65.00  
- Mantenimiento: $4.60
- Gastos generales: $5.00
TOTAL: $89.10/hora
            </field>
        </record>
        
        <!-- Costo Específico TROQUELADORA -->
        <record id="cost_structure_troqueladora" model="product.product">
            <field name="name">Costo Operación TROQUELADORA</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">COST-TROQ-TOTAL</field>
            <field name="standard_price">73.24</field>  <!-- USD/hora total -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description">
Costo total operación TROQUELADORA por hora:
- Mano obra operador: $8.50
- Energía (28 kW): $2.24
- Depreciación: $45.00
- Mantenimiento: $12.50 (matrices costosas)
- Gastos generales: $5.00
TOTAL: $73.24/hora
            </field>
        </record>
        
        <!-- Costo Específico EMPAQUE -->
        <record id="cost_structure_empaque" model="product.product">
            <field name="name">Costo Operación EMPAQUE</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">COST-EMP-TOTAL</field>
            <field name="standard_price">22.46</field>  <!-- USD/hora total -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="description">
Costo total operación EMPAQUE por hora:
- Mano obra operador: $8.50
- Energía (12 kW): $0.96
- Depreciación: $8.00
- Mantenimiento: $1.00
- Gastos generales: $4.00
TOTAL: $22.46/hora
            </field>
        </record>
        
        <!-- ========== MARGENES Y PRECIOS DE VENTA ========== -->
        
        <!-- Configuración de Márgenes por Categoría -->
        <record id="pricing_rule_cajas_estandar" model="product.pricelist.item">
            <field name="pricelist_id" ref="product.list0"/>  <!-- Lista precios por defecto -->
            <field name="applied_on">2_product_category</field>
            <field name="categ_id" ref="megastock_products.category_cajas"/>
            <field name="compute_price">formula</field>
            <field name="base">list_price</field>
            <field name="price_surcharge">0.0</field>
            <field name="price_discount">0.0</field>
            <field name="price_round">0.01</field>
            <field name="price_min_margin">0.25</field>  <!-- Margen mínimo 25% -->
            <field name="price_max_margin">0.45</field>  <!-- Margen máximo 45% -->
            <field name="name">Márgenes Cajas Estándar</field>
        </record>
        
        <record id="pricing_rule_laminas_corrugadas" model="product.pricelist.item">
            <field name="pricelist_id" ref="product.list0"/>
            <field name="applied_on">2_product_category</field>
            <field name="categ_id" ref="megastock_products.category_laminas"/>
            <field name="compute_price">formula</field>
            <field name="base">list_price</field>
            <field name="price_surcharge">0.0</field>
            <field name="price_discount">0.0</field>
            <field name="price_round">0.01</field>
            <field name="price_min_margin">0.20</field>  <!-- Margen mínimo 20% -->
            <field name="price_max_margin">0.35</field>  <!-- Margen máximo 35% -->
            <field name="name">Márgenes Láminas Corrugadas</field>
        </record>
        
        <record id="pricing_rule_microcorrugado" model="product.pricelist.item">
            <field name="pricelist_id" ref="product.list0"/>
            <field name="applied_on">2_product_category</field>
            <field name="categ_id" ref="megastock_products.category_microcorrugado"/>
            <field name="compute_price">formula</field>
            <field name="base">list_price</field>
            <field name="price_surcharge">0.0</field>
            <field name="price_discount">0.0</field>
            <field name="price_round">0.01</field>
            <field name="price_min_margin">0.35</field>  <!-- Margen mínimo 35% -->
            <field name="price_max_margin">0.55</field>  <!-- Margen máximo 55% -->
            <field name="name">Márgenes Microcorrugado Premium</field>
        </record>
        
        <!-- ========== CONFIGURACIÓN ABC PARA COSTOS ========== -->
        
        <!-- Configuración Activity Based Costing -->
        <record id="abc_activity_setup" model="product.product">
            <field name="name">Actividad: Setup de Máquina</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">ABC-SETUP</field>
            <field name="standard_price">25.00</field>  <!-- USD por setup -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">
Costo actividad Setup por cambio:
- Tiempo promedio setup: 20 minutos
- Costo hora máquina parada: $75/hora
- Costo promedio por setup: $25
            </field>
        </record>
        
        <record id="abc_activity_quality_control" model="product.product">
            <field name="name">Actividad: Control de Calidad</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">ABC-QC</field>
            <field name="standard_price">0.05</field>  <!-- USD por pieza inspeccionada -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">
Costo control de calidad por pieza:
- Inspector QC: $12/hora
- Tiempo inspección: 0.25 min/pieza
- Costo por pieza: $0.05
            </field>
        </record>
        
        <!-- ========== COSTOS LOGÍSTICOS ========== -->
        
        <record id="cost_logistics_handling" model="product.product">
            <field name="name">Manejo y Almacenamiento</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">COST-LOGIST-HAND</field>
            <field name="standard_price">0.02</field>  <!-- USD por kg manejado -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_kgm"/>
            <field name="uom_po_id" ref="uom.product_uom_kgm"/>
            <field name="description">
Costo manejo interno y almacenamiento:
- Personal almacén: $7/hora
- Montacargas: $2/hora combustible
- Costo promedio: $0.02/kg
            </field>
        </record>
        
        <record id="cost_logistics_packaging" model="product.product">
            <field name="name">Materiales de Empaque</field>
            <field name="categ_id" ref="cost_category_overhead"/>
            <field name="type">service</field>
            <field name="default_code">COST-LOGIST-PACK</field>
            <field name="standard_price">0.08</field>  <!-- USD por paquete -->
            <field name="list_price">0.0</field>
            <field name="sale_ok">False</field>
            <field name="purchase_ok">False</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">
Costo materiales empaque final:
- Film plástico, etiquetas, flejes
- Promedio $0.08 por paquete estándar
- Varía según tamaño del producto
            </field>
        </record>
        
    </data>
</odoo>